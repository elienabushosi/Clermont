# Clermont Frontend â€“ copy to .env.development and .env.production
# Next.js loads .env.development when NODE_ENV=development, .env.production when NODE_ENV=production

# -----------------------------------------------------------------------------
# API (backend URL)
# -----------------------------------------------------------------------------
# Development: local backend
NEXT_PUBLIC_API_URL=http://localhost:3002
# Production: your deployed backend URL (e.g. Railway)
# NEXT_PUBLIC_API_URL=https://your-clermont-api.up.railway.app

# -----------------------------------------------------------------------------
# Google Maps (use Lindero key to verify; later replace with new key)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# -----------------------------------------------------------------------------
# Stripe (use Lindero product/price IDs to verify; later replace with Clermont Stripe)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_PRODUCT_ID=prod_...
NEXT_PUBLIC_STRIPE_MONTHLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_ANNUAL_PRICE_ID=price_...
